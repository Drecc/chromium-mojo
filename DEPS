    Var('chromium_git') + '/chromium/tools/depot_tools.git' + '@' + '8b707654318d0b2b24c0b0bbeeef0ee8b0865007',
  'src/third_party/nasm': {
    'url': Var('chromium_git') + '/chromium/deps/nasm.git' + '@' +
    '9215e8e1d0fe474ffd3e16c1a07a0f97089e6224'
